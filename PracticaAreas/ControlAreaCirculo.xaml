<UserControl x:Class="PracticaAreas.ControlAreaCirculo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaAreas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel Orientation="Vertical" Background="White">
        <TextBlock>Circulo:</TextBlock>
        <WrapPanel Orientation="Horizontal">
            <TextBlock Margin="0,0,0,0">Radio:</TextBlock>

            <TextBlock Margin="304,0,0,0">Área:</TextBlock>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal">
            <TextBox Name="Radio" Width="100" Margin="0,0,0,0"/>
            <Button Name="BotonCirculo" Click="BotonCirculo_Click" Margin="153,0,0,0">Calcular</Button>
            <TextBlock Name="areaCirculo" Width="50" Margin="33,0,0,0"></TextBlock>
        </WrapPanel>
    </WrapPanel>
</UserControl>
